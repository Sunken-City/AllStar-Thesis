// FRAGMENT SHADER
#version 410 core

//UNIFORMS/////////////////////////////////////////////////////////////////////
uniform sampler2D gDiffuseTexture;
uniform vec4 gLayerTint;

//INPUTS/////////////////////////////////////////////////////////////////////
in vec2 passUV;
in vec4 passColor;

//OUTPUTS/////////////////////////////////////////////////////////////////////
out vec4 fragmentColor;

//MAIN/////////////////////////////////////////////////////////////////////
void main()
{
  vec4 diffuseColor = texture(gDiffuseTexture, passUV);

  fragmentColor = passColor * diffuseColor * gLayerTint;
}
